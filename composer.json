{
  "name": "wpsh/wp-plugin",
  "description": "A WordPress plugin abstraction library",
  "type": "library",
  "authors": [{
    "name": "Kaspars Dambis",
    "email": "hi@kaspars.net"
  }],
  "autoload": {
    "psr-4": {
      "WPSH\\Plugin\\": "src/"
    }
  },
  "require": {},
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "automattic/vipwpcs": "^0.4.0",
    "wp-coding-standards/wpcs": "^1.2",
    "brainmaestro/composer-git-hooks": "^2.6",
    "editorconfig-checker/editorconfig-checker": "^8.0"
  },
  "scripts": {
    "post-install-cmd": [
      "vendor/bin/cghooks add --no-lock"
    ],
    "post-update-cmd": [
      "vendor/bin/cghooks update"
    ],
    "lint-php": [
      "vendor/bin/phpcs ."
    ],
    "lint-editorconfig": [
      "vendor/bin/editorconfig-checker --ignore-defaults ."
    ],
    "lint": [
      "@lint-php",
      "@lint-editorconfig"
    ]
  },
  "extra": {
    "hooks": {
      "pre-commit": "composer lint"
    }
  }
}
